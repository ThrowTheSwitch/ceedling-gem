#!/usr/bin/env ruby
require "rubygems"
require "thor"

class CeedlingTasks < Thor
  include Thor::Actions

  def self.source_root
    File.dirname(__FILE__) + "/.."
  end

  desc "new PROJECT_NAME", "create a new ceedling project"
  def new(name)
    directory "new_project", name
  end
end
CeedlingTasks.start
